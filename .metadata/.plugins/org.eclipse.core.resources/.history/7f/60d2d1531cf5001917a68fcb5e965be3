
package br.edu.udc.guiMessage;

import javax.swing.JOptionPane;

public class Mensagem {

	public static void main(String[] args) {
//		JOptionPane.showMessageDialog(null, "Olá Mundo!");// primeiro é a caixa pai.... logo após vem a mensagem
//		Janela de diálogo		
		
//		JOptionPane.showInputDialog("Qual é seu nome?"); // Janela de pergunta
		
		String nome = JOptionPane.showInputDialog(null,"Qual é seu nome?");
		String idade = JOptionPane.showInputDialog(null,"Qual é sua idade " + nome + "?");
		JOptionPane.showMessageDialog(null, "Olá " + nome + " de " + idade + " anos.");		
		int i = Integer.parseInt(idade); // parseInt verifica se o conteúdo da variável é um número inteiro
		JOptionPane.showMessageDialog(null, "Olá " + nome + " de " + idade + " anos!\n" + 
				"Você nasceu em " + (2019 - i));
		
		
		
	}

}
